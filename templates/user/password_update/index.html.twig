{% extends 'base.html.twig' %}

{% block title %}Modifier password de "{{ app.user.userIdentifier }}"{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
        <h1 class="mb-4 font-weight-normal text-center">Modifier password de "{{ app.user.userIdentifier }}"</h1>

        {% for flashMessage in app.flashes('success') %}
            <div class="alert alert-success" role="alert">
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% for flashMessage in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">
                {{ flashMessage }}
            </div>
        {% endfor %}

        {% set successMessages = app.session.flashbag.get('success') %}

        {{ form_start(passwordUpdateForm, {'attr': {'class': 'needs-validation'}}) }}
            <div class="mb-3">
                {{ form_row(passwordUpdateForm.newPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Saisissez un nouveau mot de passe...'}}) }}
            </div>
            <div class="mb-4">
                {{ form_row(passwordUpdateForm.newPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe identique à la saisie précédente...'}}) }}
            </div>
            <div class="d-flex justify-content-center">
                {{ form_row(passwordUpdateForm.save, {'attr': {'class': 'btn btn-block btn-signup me-3'}}) }}
                <a href="{{ path('app_account') }}" class="btn btn-outline btn-login">Mon compte</a>
            </div>
        {{ form_end(passwordUpdateForm) }}
        </div>
    </div>
</div>
{% endblock %}