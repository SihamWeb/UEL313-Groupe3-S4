{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <form method="post" class="needs-validation">
                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <p class="fs-1 text-center">Vous êtes déjà connecté en tant que <span class="important">{{ app.user.userIdentifier | capitalize}}</span> !</p>
                    {% else %}

                    <h1 class="h3 mb-3 font-weight-normal text-center">Se connecter</h1>

                    <div class="mb-3">
                        <label for="inputUsername" class="form-label">Nom d'utilisateur</label>
                        <input placeholder="Votre nom d'utilisateur..." type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Mot de passe</label>
                        <input placeholder="Votre mot de passe..." type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-flex justify-content-center mt-4">
                        <button class="btn btn-block btn-signup me-3" type="submit">
                            Se connecter
                        </button>
                        <a href="{{ path('app_register') }}" class="btn btn-outline btn-login">S'inscrire</a>
                    </div>
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
