{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}
{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <h1 class="text-center mb-4">S'inscrire</h1>

                {% if form_errors(registrationForm)|length > 0 %}
                    <div class="alert alert-danger" role="alert">
                        {{ form_errors(registrationForm) }}
                    </div>
                {% endif %}

                {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}
                    <div class="mb-3">
                        {{ form_row(registrationForm.username, {'attr': {'class': 'form-control', 'placeholder': 'Sarah...'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Minimum 6 caractères...'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_row(registrationForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Identique à la saisie précédente...'}}) }}
                    </div>

                    <div class="form-check mb-4 d-flex justify-content-center">
                        {{ form_row(registrationForm.RgpdConsent, {'label_attr': {'class': 'form-check-label'}, 'attr': {'class': 'form-check-input'}}) }}
                    </div>

                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-block btn-signup me-3">S'inscrire</button>
                        <a href="{{ path('app_login') }}" class="btn btn-outline btn-login">Se connecter</a>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}


