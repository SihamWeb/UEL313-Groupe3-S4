{% extends 'base.html.twig' %}

{% block title %}{{ lien.lienTitre }}{% endblock %}

{% block body %}
    {% if app.user %}
        <div class="container">
            <div class="row justify-content-center mt-5">
                <h1 class="mb-4 font-weight-normal text-center">Lien n°{{ lien.id }}</h1>

                <table class="table table-bordered table-striped table-hover">
                    <tbody>
                        <tr>
                            <th scope="row">Lien_url</th>

                            <td><a target="_blank" href="{{lien.lienUrl}}">{{ lien.lienUrl }}</a></td>

                        </tr>
                        <tr>
                            <th scope="row">Lien_titre</th>
                            <td>{{ lien.lienTitre }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Lien_desc</th>
                            <td>{{ lien.lienDesc }}</td>
                        </tr>
                        <tr>
                        
                            <th scope="row">Image</th>
                            <td>
                            <img width='100px' src="{{ lien.lienImage }}"/>
                            </td>

                        </tr>
                        <tr>
                            <th scope="row">Tag(s)</th>
                            <td>
                                {% if lien.tagId is not empty %}
                                    {% for tag in lien.tagId %}
                                        <a href="{{ path('app_lien_by_tag', {'tagId': tag.id}) }}">{{ tag.tagName }}</a>
                                        {% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                {% else %}
                                    No tags
                                {% endif %}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-4">
            <a href="{{ path('app_lien_index') }}" class="btn btn-block btn-signup me-3">Retourner à la liste</a>
            <a href="{{ path('app_lien_edit', {'id': lien.id}) }}" class="btn btn-outline btn-login">Modifier</a>
        </div>
        <div class="d-flex justify-content-center mt-4">
            {{ include('lien/_delete_form.html.twig') }}
        </div>
    {% endif %}
{% endblock %}
