{% extends 'base.html.twig' %}

{% block title %}Liste des liens{% endblock %}

{% block body %}

    {% if app.user %}

    <h1 class="font-weight-normal text-center mb-4"> Liste des liens </h1>


        <div class="row d-flex justify-content-center">
        {% for lien in pagination %}
        
            <div class="card miniature col-4 col-sm-3" >

                <a href="{{ path('app_lien_show', {'id': lien.id}) }}" class="text-center text-uppercase text-decoration-none"><img class='miniature' src="{{ lien.lienImage }}">
                <div class='container'><p class="mt-3">{{lien.lienTitre}}</p></div></a>
            </div>
        {% else %}
            <tr>
                <td colspan="6">Aucun lien trouvé et disponible</td>
            </tr>
            
        {% endfor %}

        </div>


    {{ knp_pagination_render(pagination) }}

    <div class="d-flex justify-content-center">
        <a href="{{ path('app_lien_new') }}" class="btn btn-block btn-signup mt-5 mb-5">Créer un lien</a>
    </div>

    {% endif %}
{% endblock %}
